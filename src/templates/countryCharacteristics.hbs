<div class='card'>
  <div class='country-item-top'>
    {{#each name}}
      <img
        class='country-flag'
        src='{{flags.svg}}'
        alt='{{name.common}}'
        width='150'
        height='100%'
      />
      <h2 class='country-title'>{{name.official}}</h2>
    {{/each}}
  </div>
  <div class='card-body'>
    <p class='card-text'>Capital:{{capital}} </p>
    {{#each name}}
      <p class='card-text'>Population: {{name.population}}</p>
    {{/each}}
    <p class='card-text'>Languages: {{languages}}</p>

  </div>

</div>

